<% if signed_in? %>
	<%= form_for @widget, html: {id: "target", class: "navbar-search"} do |f| %>
	<li class="dropdown" style="top:4px;">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class=" icon-plus"> </i><b class="caret"></b></a> 
	<ul class="dropdown-menu" style="left:-120px;">
				<% widget_types.each do |name| %>
					<li class="addwidget">
						<a class="<%= name %>" href="#"><%= f.label name %></a>
					</li> 
				<% end %>
				<%= f.hidden_field :name %>
				<%= f.hidden_field :properties, value: default_properties %>
	<% end %>
	</ul>
</li>
<% end %>