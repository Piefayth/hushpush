<div class="modal-body">

	<%= form_tag( {controller: 'widgets', action: 'update', id: widget.id} , {method: :put, class: "form-horizontal"}) do %>
		<div class="control-group">
			<label class="control-label">Background Color: </label>
			<div class="controls"><%= text_field_tag :background_color, "#{widget.widget_preference.background_color}" %> Format: 123456</div>
		</div>
</div>
<div class="modal-footer">
	<a href="#" class="btn" data-dismiss="modal">Close</a>
	<%= submit_tag "Save Changes", class: "btn btn-primary" %>
	<% end %>
</div>