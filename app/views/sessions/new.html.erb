<% provide(:title, "Sign in") %>
<h1>Sign In</h1>
<%= form_tag sessions_path do |f| %>

	<%= label_tag :email %>
	<%= text_field_tag :email, params[:email] %>

	<%= label_tag :password %>
	<%= password_field_tag :password %>

	<%= submit_tag "Sign In" %>
<% end %>

<p>New user? <%= link_to "Sign up!", signup_path %></p>